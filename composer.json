{
	"name": "codesoup/options",
	"description": "Framework-agnostic WordPress options manager using custom post types. Supports ACF, custom metaboxes, and extensible integrations.",
	"homepage": "https://www.codesoup.co",
	"type": "wordpress-plugin",
	"license": "GPL-3.0-or-later",
	"support": {
		"issues": "https://github.com/code-soup/codesoup-options/issues"
	},
	"authors": [
		{
			"name": "Code Soup",
			"email": "hi@codesoup.co",
			"homepage": "https://www.codesoup.co"
		}
	],
	"keywords": [
		"wordpress",
		"options",
		"settings",
		"custom-post-type",
		"acf",
		"metabox",
		"cmb2",
		"framework-agnostic",
		"extensible",
		"composer-package"
	],
	"autoload": {
		"files": [
			"includes/class-autoloader.php"
		]
	},
	"require": {
		"php": ">=8.1.0"
	},
	"suggest": {
		"advanced-custom-fields/advanced-custom-fields-pro": "Optional: Enables ACF location rules and field group management."
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.1",
		"phpcompatibility/phpcompatibility-wp": "*",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"php-parallel-lint/php-console-highlighter": "^1.0"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"sort-packages": true,
		"optimize-autoloader": true
	},
	"scripts": {
		"lint": "@php ./vendor/bin/parallel-lint . -e php --show-deprecated --exclude vendor --exclude .git",
		"lint:phpcs": "vendor/bin/phpcs",
		"lint:phpcbf": "vendor/bin/phpcbf"
	},
	"scripts-descriptions": {
		"lint": "Lint PHP files against parse errors",
		"lint:phpcs": "Analyze code against WordPress coding standards",
		"lint:phpcbf": "Fix coding standards warnings/errors automatically"
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
